<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		noDataText="No BP Found"
		title="Select Account"
		search="onHandleSearchEmployee"
		confirm="onHandleValueHelpCloseBatch"
		cancel="onHandleValueHelpCloseBatch"
		showClearButton="true"
		items="{oMdlAllEmp>/allbp}">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{oMdlAllEmp>empID}"
			description="Name : {oMdlAllEmp>firstName} {oMdlAllEmp>lastName}" />
	</SelectDialog>
</core:FragmentDefinition>

